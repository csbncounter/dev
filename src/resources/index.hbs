{{#> layout}}
{{#*inline "content"}}
  {{> pageHeader }}

  {{#> pageSection heading="A Word from Our Hosts" subheading="How hear to prepare from our pre-event webinar" sectionClass="home-callouts-wrapper"}}
  {{#* inline "content"}}
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <p class="announcement">
        CSB President Scott Haima interviews our speaker Chuck Stecker and the chair of our steering committee, Michael English. Their goal is to prepare and encourage both spiritually and practically those who have registered.
      </p>
    </div>
  </div>
  <div class="row" style="position: relative;"> 
    <div class="col-md-8 col-md-offset-2">                   
      <div class="embed-responsive embed-responsive-16by9">
        <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/HJjRLBaokgY?rel=0" allowfullscreen></iframe>
      </div>
    </div>
  </div>
  {{/inline}}    
  {{/pageSection}}  

  {{#> pageSection heading="Tenting Area" subheading=""}}
  {{#* inline "content"}}
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="embed-responsive embed-responsive-16by9">
        <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/fhdQ1vXN074?rel=0" allowfullscreen></iframe>
      </div>
    </div>
  </div>
  {{/inline}}    
  {{/pageSection}}

  {{#> pageSection heading="Guides and Necessary Documents" subheading=""}}
  {{#* inline "content"}}
  <div class="row">
    <div class="col-md-8 col-md-offset-2">   
      <table class="table table-striped announcement">
        <tbody>
          {{#each resources}}
          <tr>
            <td class="resource-thumbnail-column"><a href="{{docUrl}}" target="_blank"><img src='{{thumbUrl}}' width={{thumbWidth}} /></a></td>
            <td class="resource-description-column"><p style="text-align:left;font-weight:bold;margin-bottom:0.618em">{{title}}</p><p>{{{description}}}</p></td>
          </tr>
          {{/each}}
        </tbody>
      </table>
  </div>
  {{/inline}}    
  {{/pageSection}}
{{/inline}}
{{/layout}}